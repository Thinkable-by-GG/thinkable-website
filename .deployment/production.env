# Production Environment Variables for Thinkable CMS
# Copy this to .env on the server and update with your values

# MongoDB Connection (Update with your MongoDB URI)
MONGODB_URI=mongodb://localhost:27017/thinkable

# Payload CMS
PAYLOAD_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_IN_PRODUCTION
PAYLOAD_PUBLIC_SERVER_URL=https://thinkable.app

# Server
PORT=3001
NODE_ENV=production
